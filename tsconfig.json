{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@bundler": ["./bundler/index.ts"],
      "@common/*": ["./common/*"],
      "@client": ["./client/index.ts"]
    },
    "lib": ["WebWorker", "DOM"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "jsx": "react"
  },
  "exclude": ["app", "packager"]
}
