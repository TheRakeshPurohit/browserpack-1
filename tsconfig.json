{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@bundler": ["./bundler/index.ts"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  }
}
